#menu {
	top: 100px;
	/* 주로 메뉴바에 거의 쓰임 */
	position: fixed; /* static, relative, absolute */
	background-color: black;
	color: yellow;
}
/* modal 기본 속성 */
#myModalIdChk { /* 전체 막는 레이어 */
	position: fixed;
	width: 100%;
	height: 100%; /* fixed인 경우 height는 %가 먹힌다 */
	left: 0px;
	top: 0px;
	background-color: rgba(0, 0, 0, 0.7); /* 살짝 투명하게 예의 */
	z-index: 999999; /* 큰값이 무조건 맨 앞 레이어 */
	display: none; /* 안보이면서 자리도 안 차지하깅 */
	/* display: block; */
}

#myContIdChk { /* 보여줄 내용 부분 */
	width: 40%;
	height: 39vh;
	margin: 30px auto; /* 가운데 정렬 */
	background-color: #f6f0e8;
}

