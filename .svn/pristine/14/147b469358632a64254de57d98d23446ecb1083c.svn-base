#hirdate {
	width: calc(100% - 64px);
}
#empIdbtn {
	color: var(--white);
	padding: 6px 5px;
}

#emp-table p {
	margin-bottom: 0;
}

#payment-table td {
	padding: 10px 3px;
}

.pay-emp-info {
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	margin-bottom: 20px;
}

.pay-title,
.pay-cont {
	margin-bottom: 0;
}

.pay-line {
	position: relative;
	display: inline-block;
    margin: 0 15px;
}

.pay-line:before {
	content: "";
	display: inline-block;
	width: 1px;
	height: 16px;
	background-color: var(--color7);
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}

.print-h1 {
	text-align: center;
	display: none;
	margin-bottom: 5rem;
}

.or-list p {
	margin-bottom: 0;
}

.or-list img {
	border-radius: 50%;
}

.or-list i {
	margin-right: 10px;
}

.or-list .empname {
	font-size: 1.8rem;
	margin: 1rem 0;
	font-weight: 700;
}

.or-list .pill-box {
	display: inline-block;
	border-radius: 20px;
	padding: 0 10px;
	background-color: red;

}

.or-list .pill-box.dep {
	background-color: #f7d3d0;
	margin-right: 5px;
}

.or-list .pill-box.posi {
	background-color: #d2e4f3;
}

.pay-date-box {
	align-items: center;
}

.pay-date-box p {
	margin-bottom: 0;
}

.date-input {
	width: 150px;
    padding: 10px 20px;
    border-radius: 5px;
}

.empNotice-detail-content p {
	margin-bottom : 0;
}

.empNotice-title {
	border-bottom: 1px solid var(--input-border);
	padding: 20px 0;
}

.line {
	display: inline-block;
    position: relative;
    margin: 0 10px;
}

.line:after {
	    content: "";
    display: inline-block;
    width: 1px;
    height: 20px;
    background-color: #DCDCDC;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);

}

.n-title {
	font-size: 2rem;
	font-weight: 500;
	margin-bottom: 1rem;
}

.empNotice-content {
	height: 350px;
	padding: 20px 0;
}

.empNotice-file {
	border-top: 1px solid var(--input-border);
	padding: 20px 0;
}

.page-body-other {
	overflow: auto;
    height: 500px;
}


@media print {
	.sidebar,
	.main-header,
	.main-panel .page-header,
	.main-panel .table-top-box,
	.footer,
	.alert-secondary {
		display: none !important;
	}

	.print-h1 {
		display: block;
	}

	.main-panel {
		width: 100%;
	}

	.card {
		padding: 0;
		-webkit-box-shadow: none;
		box-shadow: none;
	}

}