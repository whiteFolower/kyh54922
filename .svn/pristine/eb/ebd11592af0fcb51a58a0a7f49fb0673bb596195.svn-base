table {
    border-collapse: collapse;
}
table {
    width: 100%;
    border-top: 1px solid var(--table-default-border);
}

table tr {
    border-bottom: 1px solid #b79e7a;
    white-space:nowrap;
}

table tr th,
table tr td {
    padding: 10px 15px;
    text-align: center;
}

.text-left-td tr td {
