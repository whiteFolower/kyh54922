}

.input-radio-div input[type='radio'] {
	width: auto;
	margin-right: 5px
}

.reference {
    position: absolute;
    top: 20px;
    right: 20px;
}

.reference-view {
    border: none;
    padding: 5px 10px;
    background-color: #9ac1f3;
    color: #fff;
    border-radius: 5px;
}

.reference-content {
    width: 150px;
    position: absolute;
    top: 35px;
    right: 0;
    z-index: 3;
    padding: 5px;
    background-color: #f7f7f7;
    box-shadow: 5px 9px 12px #6c6c6c42;
    border-radius: 5px;
    opacity: 0;
    transition: opacity .3s ease-in-out; /* Use opacity for a smoother transition */
  }

  .reference .reference-view:hover ~ .reference-content {
    opacity: 1; /* Ensure opacity is set to 1 when displayed */
  }
.reference-content p {
    margin-bottom: 0;
    padding: 0 10px;
    line-height: 30px;
    font-size: 1rem;
}


.page-body.workin {
