/* scollbar css start */
::-webkit-scrollbar {
    width: 10px;
    height: 5px;
}

::-webkit-scrollbar-thumb {
    background-color: var(--colorC);
    border-radius: 15px;
}

::-webkit-scrollbar-track {
    background-color: transparent;
}
/* scollbar css end */

/* select custom start */
.custom-select {
    width: 150px;
    position: relative;
}

.custom-select select {
    display: none;
}

.select-selected {
    background-color: #fff;
    border-radius: 5px;
    border: 1px solid var(--input-border);
}

.select-selected:after {
    position: absolute;
    content: "";
    top: 17px;
    right: 10px;
    width: 0;
    height: 0;
    border: 6px solid transparent;
    border-color: #333 transparent transparent transparent;
    transition: all ease 0.2s;
}

.select-selected.select-arrow-active:after {
    border-color: transparent #333 transparent transparent;
    top: 10px;
    transform: rotate(90deg);
}

.select-items div,
.select-selected {
    color: #333;
    padding: 10px 16px;

    cursor: pointer;
    user-select: none;
}

.select-items div {
    border-bottom: 1px solid var(--input-border);
}

.select-items div:last-of-type {
    border-bottom: none;
}

.select-items {
    position: absolute;
    background-color: #ffffff;
    top: 105%;
    left: 0;
    right: 0;
    z-index: 99;
    border: 1px solid var(--input-border);
    border-radius: 5px;
    overflow-y: auto;
    max-height: 200px;
}

.select-hide {
    display: none;
}

.select-items div:hover,
.same-as-selected {
    background-color: rgba(0, 0, 0, 0.1);
}

/* select custom end */

/* checkbox custom start */
.input-container {
    display: block;
    position: relative;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

.input-container input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    height: 0;
    width: 0;
}

.checkmark {
    position: absolute;
    top: 0;
    left: 0;
    height: 15px;
    width: 15px;
    background-color: var(--colorE);
    border: 1px solid var(--input-border);
    border-radius: 3px;
}

.input-container:hover input~.checkmark {
    background-color: var(--input-check);
}

.input-container input:checked~.checkmark {
    background-color: var(--pms-primary);
}

.checkmark:after {
    content: "";
    position: absolute;
    display: none;
}

.input-container input:checked~.checkmark:after {
    display: block;
}

.input-container .checkmark:after {
    left: 4px;
    top: 1px;
    width: 5px;
    height: 8px;
    border: solid white;
    border-width: 0 2px 2px 0;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
}

.table-input-in .checkmark {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
/* checkbox custom end */

/* tooltip custom start */
.custom-tooltip {
	position: relative;
	display: inline-block;
}

.custom-tooltip .tooltiptext {
	visibility: hidden;
	background-color: #8a95a0;
	color: #fff;
	text-align: center;
	border-radius: 6px;
	padding: 5px;
	/* Position the tooltip */
	position: absolute;
	z-index: 1;
	top: 50%;
	left: 50%;
	transform: translate(-50%, 80%);
}

.custom-tooltip:hover .tooltiptext {
	visibility: visible;
}
/* tooltip custom end */

