.table-header-fix {
    border-collapse: separate;
	border-spacing: 0;
    border-top: none;
}
.table-header-fix thead {
    position: sticky;
    top: 0;
    background-color: #fff;
}

.table-header-fix tr th {
    border-top: 1px solid var(--table-default-border);
}

.table-header-fix tr th,
.table-header-fix tr td {
    border-bottom: 1px solid var(--table-default-border);
}

.emp-depth ul li {
    list-style: none;
}

.emp-depth ul li a {
    display: inline-block;
    padding: 1rem 0;
    font-size: 1.2rem;
}

.emp-list {
    min-height: calc(100vh - 400px);
    border-left: 1px solid var(--table-default-border);
}

.emp-list-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    padding: 2rem;
}

.emp-box {
    display: flex;
    align-items: center;
    border: 1px solid var(--table-default-border);
    border-radius: 8px;
    padding: 1rem;
    cursor: pointer;
}

.emp-box p {
    margin-bottom: 0.5rem;
    line-height: 20px;
}

.emp-image {
    margin-right: 10px;
}
.emp-info p {
	margin: 0;
	line-height: 25px;
}

.emp-info > div {
    display: flex;
}
.line-before {
    display: inline-block;
	margin: 0 10px;
	position: relative;
}

.line-before::before {
    content: "";
	width: 0.5px;
	height: 15px;
	background-color: var(--color9a);
	position: absolute;
	top: 38%;
	left: 56%;
	transform: translate(-50%, -50%);
	display: block;
}

.maintain-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 15px;
}

.maintain-main {
    height: 100px;
    border: 1px solid var(--color9a);
    border-radius: 5px;
    text-align: center;
}

/* paging */
.paging {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
}

.m-table-inner {
    padding-bottom: 1rem;
}

.input-radio-div {
	display: flex;
	align-items: center;
