	<sql id="searchFrag">
		<where>
			<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(simpleCondition.searchWord)">
				<choose>
					<when test="simpleCondition.searchType eq 'name'">
						INSTR(EMP_NAME, #{simpleCondition.searchWord}) > 0
					</when>
					<otherwise>
						INSTR(EMP_NAME, #{simpleCondition.searchWord}) > 0
					</otherwise>
				</choose>
			</if>
		</where>
	</sql>

	<select id="selectTotalRecord" resultType="int">
		SELECT COUNT(ATTE_ID)
		FROM ATTENDANCE INNER JOIN EMP ON (ATTENDANCE.EMP_ID = EMP.EMP_ID)
		<include refid="searchFrag"></include>
	</select>

	<select id="selectAttencanceList" resultType="AttencanceVO">
		 SELECT B.*
			FROM (
				SELECT ROWNUM RNUM,  A.*
				FROM (
				    SELECT
						    ATTE_ID
						    , EMP.EMP_ID "emp.empId"
						    , ATTE_ALL_AN_LEAVE
						    , ATTE_LEFT_AN_LEAVE
						    , ATTE_USE_AN_LEAVE
						    , EMP_NAME "emp.empName"
						FROM ATTENDANCE INNER JOIN EMP ON (ATTENDANCE.EMP_ID = EMP.EMP_ID)
						<include refid="searchFrag"></include>
				) A
			) B
			<![CDATA[
	        WHERE RNUM >= #{firstRecord} AND RNUM <= #{lastRecord}
	        ]]>
	</select>


	<insert id="insertattvo" parameterType="AttendanceDefaultVO">
		<selectKey order="BEFORE" resultType="String" keyProperty="adId">
			SELECT SEQ_AD_ID.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO ATTENDANCE_DETAIL(
			AD_ID
			,EMP_ID
			,AD_CONTENT
			,AD_CATAGORY
			,AD_STR_DATE
			,AD_END_DAY
		)  VALUES (
		 #{adId}
		 ,#{empId}
		 ,#{adContent}
		 ,#{adCatagory}
		 ,#{adStrDate ,jdbcType=TIMESTAMP}
   		 ,#{adEndDay,jdbcType=TIMESTAMP}
		)
	</insert>


</mapper>